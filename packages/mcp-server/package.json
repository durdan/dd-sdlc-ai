{
  "name": "@sdlc/mcp-server",
  "version": "1.0.0",
  "description": "MCP server for SDLC AI Platform - Enable AI assistants to generate SDLC documentation",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "sdlc-mcp": "./dist/index.js"
  },
  "scripts": {
